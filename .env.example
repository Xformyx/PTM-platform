# =============================================================================
# PTM Analysis Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# =============================================================================

# ─── General ─────────────────────────────────────────────────────────────────
APP_ENV=development
DEBUG=true

# ─── Authentication ──────────────────────────────────────────────────────────
# Set to true for production/portal mode, false for internal use
AUTH_ENABLED=false
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ─── MySQL ───────────────────────────────────────────────────────────────────
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ptm_platform
MYSQL_USER=ptm_user
MYSQL_PASSWORD=ptm_password_change_me
MYSQL_ROOT_PASSWORD=ptm_root_password_change_me
DATABASE_URL=mysql+asyncmy://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# ─── ChromaDB ────────────────────────────────────────────────────────────────
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_URL=http://${CHROMADB_HOST}:${CHROMADB_PORT}

# ─── Ollama (Local LLM) ─────────────────────────────────────────────────────
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434
OLLAMA_URL=http://${OLLAMA_HOST}:${OLLAMA_PORT}
DEFAULT_LLM_MODEL=qwen2.5:7b

# ─── Cloud LLM (Optional) ───────────────────────────────────────────────────
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ─── MCP Server ──────────────────────────────────────────────────────────────
MCP_SERVER_HOST=mcp-server
MCP_SERVER_PORT=8001
MCP_SERVER_URL=http://${MCP_SERVER_HOST}:${MCP_SERVER_PORT}

# ─── External API Keys ──────────────────────────────────────────────────────
NCBI_EMAIL=your-email@example.com
NCBI_API_KEY=
STRINGDB_API_KEY=

# ─── API Server ──────────────────────────────────────────────────────────────
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8000

# ─── File Storage ────────────────────────────────────────────────────────────
INPUT_DIR=/app/data/inputs
REPORTS_DIR=/app/storage/reports
REFERENCE_DIR=/app/data/reference
LOG_DIR=/app/storage/logs

# ─── Worker Concurrency ─────────────────────────────────────────────────────
PREPROCESSING_CONCURRENCY=2
RAG_ENRICHMENT_CONCURRENCY=3
REPORT_GENERATION_CONCURRENCY=2
